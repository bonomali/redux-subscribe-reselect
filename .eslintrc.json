{
  "env": {
    "node": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2019,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "indent": ["error",2, {"SwitchCase": 1}],
    "linebreak-style": ["error","unix"],
    "quotes": ["error","single"],
    "semi": ["error","never"]
  }
}